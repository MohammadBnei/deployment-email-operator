{
  "name": "deployment-monitor-operator",
  "version": "0.1.0",
  "repository": {
    "type": "git",
    "url": "https://github.com/MohammadBnei/deployment-email-operator"
  },
  "keywords": [
    "go",
    "voc-on-steroid"
  ],
  "author": "Mohammad-Amine BANAEI",
  "license": "ISC",
  "scripts": {
    "release": "release-it"
  },
  "release-it": {
    "$schema": "https://unpkg.com/release-it@19/schema/release-it.json",
    "git": {
      "commitMessage": "chore: release v${version}",
      "tagName": "back-${version}"
    },
    "github": {
      "release": false
    },
    "npm": {
      "publish": false
    },
    "plugins": {
      "@release-it/conventional-changelog": {
        "preset": {
          "name": "angular",
          "types": [
            {
              "type": "feat",
              "section": "Features"
            },
            {
              "type": "fix",
              "section": "Bug Fixes"
            },
            {
              "type": "docs",
              "section": "Docs"
            },
            {
              "type": "style",
              "section": "Style"
            },
            {
              "type": "refactor",
              "section": "Refactor"
            },
            {
              "type": "perf",
              "section": "Perf"
            },
            {
              "type": "test",
              "section": "Test"
            }
          ]
        },
        "infile": "CHANGELOG.md"
      }
    }
  },
  "devDependencies": {
    "@release-it/conventional-changelog": "^10.0.1",
    "release-it": "^19.0.5"
  }
}
